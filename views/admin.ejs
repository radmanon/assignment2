<%- include("templates/header") %>
    <h1>Admin Page</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>User Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td>
                        <%= user.username %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <%= user.user_type %>
                    </td>
                    <td>
                        <% if (user.user_type==='admin' ) { %>
                            <a href="/demote/<%= user.username %>" class="btn btn-warning">Demote</a>
                            <% } else { %>
                                <a href="/promote/<%= user.username %>" class="btn btn-success">Promote</a>
                                <% } %>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
    <%- include("templates/footer") %>